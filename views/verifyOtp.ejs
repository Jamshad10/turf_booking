<%- include('layout/headerlinks') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">

    <form method="post" action="/verify">
        <div class="d-flex justify-content-center align-items-center container">
            <div class="card py-5 px-3">
                <h5 class="m-0">Email verification</h5>
                <span class="mobile-text">Enter the code we just send on your email address <b class="text-danger">email
                        address</b></span>
                <div class="d-flex flex-row mt-4">
                    <input type="text" class="form-control" autofocus="" name="digit1" maxlength="1">
                    <input type="text" class="form-control" name="digit2" maxlength="1">
                    <input type="text" class="form-control" name="digit3" maxlength="1">
                    <input type="text" class="form-control" name="digit4" maxlength="1">
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
                <div class="text-center mt-4">
                    <span class="d-block mobile-text">Don't receive the code?</span>
                    <span class="font-weight-bold text-danger cursor">Resend</span>
                </div>
            </div>
        </div>
    </form>

    <style>
        .card {
            width: 350px;
            padding: 10px;
            border-radius: 20px;
            background: #fff;
            border: none;
            height: 350px;
            position: relative;
        }

        .container {
            height: 100vh;
        }

        body {
            background: #eee;
        }

        .mobile-text {
            color: #989696b8;
            font-size: 15px;
        }

        .form-control {
            margin-right: 12px;
        }

        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #ff8880;
            outline: 0;
            box-shadow: none;
        }

        .cursor {
            cursor: pointer;
        }

        body {
            background-image: url('https://images.unsplash.com/photo-1544914379-806667cd9489?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8dHVyZnxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60');
        }
    </style>

    <script>
        const inputFields = document.querySelectorAll('.form-control');

        inputFields.forEach((input, index) => {
            input.addEventListener('input', (event) => {
                const inputLength = event.target.value.length;
                const maxLength = parseInt(event.target.getAttribute('maxlength'));

                if (inputLength >= maxLength) {
                    // Focus the next input field
                    if (index < inputFields.length - 1) {
                        inputFields[index + 1].focus();
                    }
                }
            });
        });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

